<!DOCTYPE html>
<html>
	<head>
		<%= render 'shared/meta_tags' %>
	  <%= stylesheet_link_tag "dashboard", media: "all", "data-turbolinks-track" => true %>
	  <%= javascript_include_tag "dashboard", "data-turbolinks-track" => true %>
	  <%= favicon_link_tag 'ico/favicon.ico', type: 'image/x-icon' %>
		<%= csrf_meta_tags %>
		<!-- HTML5 shim and Respond.js IE8 support of HTML5 tooltipss and media queries -->
		<!--[if lt IE 9]>
			<script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
			<script src="https://raw.github.com/scottjehl/Respond/master/dest/respond.min.js"></script>
		<![endif]-->
	</head>
	<body>
		<div id="account">
		  <% if current_user %>
		    <span>Welcome, <%= current_user.email %></span>
		    <%= link_to "Sign out", destroy_user_session_path, method: :delete %>
		  <% end %>
		</div>
		<%= yield %>
		<p class="flash"><%= flash.notice %></p>
	</body>
</html>
